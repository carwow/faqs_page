<% if @category.try(:noindex) %>
  <% content_for :meta_tags do %>
    <meta name="robots" content="noindex, follow"/>
  <% end %>
<% end %>
<section class="faqs-navigation">
  <ul>
    <% @faq_entries.each do |entry| %>
      <li>
        <%= link_to entry.question, "#entry-#{entry.id}" %>
      </li>
    <% end %>
  </ul>
</section>
<section class="faqs-entries">
  <div style='border-top: 1px solid #ddd'>
    <% @faq_entries.each do |entry| %>
      <div class='faqs-entry' id = 'entry-<%= entry.id %>' style='border-bottom: 1px solid #ddd; margin-top: 24px; padding-bottom: 24px'>
        <h3><%= entry.question %></h3>
        <p><%= raw(entry.answer) %></p>
      </div>
    <% end %>
  </div>
</section>
